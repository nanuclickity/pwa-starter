// add utilities
normalize-css()
border-box-html()

html, body
  width 100vw
  min-height 100vh

body
  background-color $body-bg
  color $dark
  font-size $font-size-base
  font-family $font-family-stack
  line-height $line-height-base
  overflow-x hidden
  &.is-offline
    filter grayscale(1)

#root 
  min-height 100vh

a
  color inherit
  text-decoration none

h2
  typography_h2()

h3
  typography_h3()

p
  typography_p()


@import './animations'
@import './helpers'
