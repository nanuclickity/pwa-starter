{
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "editor.tabSize": 2,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.formatOnSave": true,
  "scss.validate": true,
  "scss.implicitlyLabel": "from",
  "scss.scannerExclude": ["**/.git", "**/node_modules", "**/bower_components"],
  "search.exclude": {
    "**/node_modules/*/**": true
  },
  "files.exclude": {
    "**/node_modules/*/**": true,
    "**/node_modules/bootstrap/scss": false,
    "**/build": true,
    "**/dist": true,
    "package-lock.json": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.git/**": true,
    "**/node_modules/*/**": true,
    "**/build/**": true
  }
}
