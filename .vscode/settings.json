{
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "editor.tabSize": 2,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.formatOnSave": true,
  "scss.validate": true,
  "path-autocomplete.pathMappings": {
    "~bootstrap": "${folder}/node_modules/bootstrap",
    "scss": "${folder}src/client/scss"
  },
  "scss.implicitlyLabel": "from",
  "scss.scannerExclude": [
    "**/.git",
    "**/node_modules/!(bootstrap)",
    "**/bower_components",
    "**/src/(server|public)"
  ],
  "search.exclude": {
    "**/node_modules/*/**": true
  },
  "files.exclude": {
    "**/node_modules/*/**": true,
    "**/node_modules/bootstrap/scss": false,
    "**/build": true,
    "**/dist": true,
    "package-lock.json": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.git/**": true,
    "**/node_modules/*/**": true,
    "**/build/**": true
  }
}
